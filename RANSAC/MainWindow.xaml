<Window x:Class="RANSAC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RANSAC"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="187" Margin="10,24,0,0" VerticalAlignment="Top" Width="212" Grid.Row="0" Grid.Column="0"/>
        <Image x:Name="image2" HorizontalAlignment="Left" Height="187" Margin="10,24,0,0" VerticalAlignment="Top" Width="212" Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="load1" Grid.Column="0" Content="Load" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="load2" Grid.Column="1" Content="Load" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
